<div>
    <label>Date Time</label>
    <input type="datetime-local" name="dateTime" class="form-control"
        value="<%= foodEntry.dateTime?.toISOString().slice(0, -1) %>" />
</div>
<div>
    <label>Food Name</label>
    <input type="text" name="foodName" class="form-control" value="<%= foodEntry.foodName %>" />
</div>
<div>
    <label>Calories</label>
    <input type="text" name="calories" class="form-control" value="<%= foodEntry.calories %>" />
</div>
<div class="mt-3">
    <label>Meal:</label>
    <% for (let m of meals) { %>
        <input type="radio" name="meal_id" value="<%= m.id %>" <%=foodEntry.meal_id===m.id ? "checked" : "" %>
        />
        <label>
            <%= m.name %>
        </label>
        <% } %>



</div>
<div class="mt-3">
    <label>Tags</label>
    <% for (let t of tags) { %>


        <input type="checkbox" 
               name="tags[]" 
               value="<%=t.id %>"
             <%= relatedTags.includes(t.id) ? "checked" : "" %> 
        />
        <label><%= t.name %></label>
    <% } %>



</div>
<div class="mt-3">
    <label>Serving Size</label>
    <input type="number" value="<%= foodEntry.servingSize %>" class="form-control" name="servingSize" />
    <label>Unit</label>
    <select name="unit" class="form-control">
        <option value="serving" <%=foodEntry.unit==="serving" ? "selected" : "" %> >Serving</option>
        <option value="grams" <%=foodEntry.unit==="grams" ? "selected" : "" %>>Grams</option>
        <option value="ounce" <%=foodEntry.unit==="ounce" ? "selected" : "" %>>Ounce</option>
        <option value="pound" <%=foodEntry.unit==="pound" ? "selected" : "" %>>Pound</option>
    </select>
</div>